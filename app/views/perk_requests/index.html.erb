<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 request-card">
      <div class="">
        <% @perk_requests.each do |perk_request| %>
        <div class="box-request">
          <div class="col-xs-4 col-xs-offset-1">

          </div>
          <div class="col-xs-7 pt-10 pl-5">
            <h2><%= perk_request.perk.title.upcase %></h4>
            <h4><%= perk_request.perk.business.name.capitalize %></h4>
            <p><i class="fa fa-tag"></i> <%=perk_request.perk.business.category.title.capitalize%></p>
            <%#=image_tag @business.picture.url(:medium), class: "img-circle" %>
          </div>
          <div class="button-delete">
          <%= link_to perk_requests_user_path(perk_request_id: perk_request.id), remote: true, method: :post do %>
            <i class="fa fa-minus-circle"></i>
            <% end %>
          </div>
        </div>
        <% end%>
      </div>
    </div>
  </div>
</div>


<%= content_for(:after_js) do %>
  <script>
  $( "button" ).click(function() {
    $( this ).parent().parent().parent().hide( "slow" );
  });
  </script>
<% end %>