<div id="wrapper-perks">
<div class="container-fluid">
  <div class="row text-center">
    <div class="btn-group">


        <%= form_tag search_perks_path, :method => 'get' do %>

          <%= select_tag :search_category_id, options_from_collection_for_select(Category.all, :id, :title, params[:search_category_id]), class: 'select_picker' %>
          <%= submit_tag "Filtrer", style: "display:none" %>
        <% end %>
          <!-- search_category_id : nouvelle donnée pour stocker le id récuperer via le filtre , dont (l'id) on passe à la methode search dans le perks_controller -->


    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 perk-card">
      <% @perks.each do |perk| %>
        <%= link_to perk_path(perk) do %>
          <div class="row relative bg-image-100" style="background-image: url(<%= image_url "Perk1.png" %>); background-position: center center">
            <div class="row box-shadow-absolute">
              <p class="mt-5"><%= perk.business.name.upcase %></p>
              <div class="row box-color-absolute" style="background-image: url(<%= image_url "colorbar-inverse.png" %>); background-position: center center"></div>
               <div class="index-5 top-90">
                <p><%= perk.title.upcase %></p>
              </div>
              <div class="box-shadow-over"></div>
            </div>
          </div>
        <%end%>
      <%end%>
    </div>
    </div>
  </div>
</div>

<%= content_for(:after_js) do %>
  <script>
    $('.select_picker').selectpicker();
    $('select').change(function(e){
     $('form').submit()
    })
  </script>
<% end %>

