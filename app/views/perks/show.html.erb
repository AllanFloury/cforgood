<div class="container-fluid">
  <div class="row text-center">
    <div class="col-xs-12 box-white-perk">
      <div class="perk-image" style="background-image: url(<%= image_url perk.picture %>); background-position: center center">
        <div class="box-shadow-perk">
          <h2><%= @perk.business.name%></h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="box-color-perk" style="background-image: url(<%= image_url "colorbar.png" %>); background-position: center center">
        <h1><%= @perk.title %></h1>
      </div>
      <div class= "plr-10">
        <p><%= @perk.details %></p>
      </div>
      <div class= "col-xs-7 address_field">
        <i class="fa fa-map-marker"> <%= @perk.business.street %></i><br/>
        <i class="fa fa-tag"> <%= @perk.business.city %></i>
      </div>
      <div class= "col-xs-5 tel_field">
        <i class="fa fa-phone"> 0670282536<%= @perk.business.telephone %></i><br/>
        <i class="fa fa-check"> Tous les jours</i>
      </div>
    </div>
    <div class="row">
      <%= render 'validation'%>
    </div>
  </div>
</div>



