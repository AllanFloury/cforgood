<div id="wrapper">
  <div class="container-fluid">
    <div class="row text-center">
      <h1>Perks</h1>
    </div>
      <div class="row">
          <div class="col-xs-10 col-xs-offset-1 perk-card">
            <% @perks.each do |perk| %>
              <%= link_to perk_path(perk) do %>
                  <div class="row relative bg-image-100" style="background-image: url(<%= image_url "Perk1.jpg" %>); background-position: center center">

                    <div class="row box-shadow-absolute">
                        <p class="mt-5"><%= perk.business.name.upcase %></p>
                    <div class="row box-color-absolute">
                        <p><%= perk.title.upcase %></p>
                    </div>
                  </div>
                </div>
              <%end%>
            <%end%>

          </div>

        </div>
  </div>
</div>
