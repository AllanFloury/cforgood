<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <br>
      <br>
        <%= image_tag "cforgood.png"%>
        <%=  %>
    </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="form-design text-center">
        <br>
        <p class="inline"> Not a member yet ?</p>
        <%= link_to t(".sign_up", :default => "Sign up"), new_registration_path(resource_name) %>
      <h2 class="text-center padding-bottom-20"></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
        </div>

        <div class="text-center padding-bottom-20">
          <%= f.submit "Log in", class: "btn btn-danger" %>
            <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary"%><br />
                <% end -%>
            <% end -%>
          <br>
          <br>
          <%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name) %>
<!--         <div class="mt-10">
            <%= render "devise/shared/links" %>
        </div> -->
        </div>
      <% end %>
      </div>
    </div>
</div>