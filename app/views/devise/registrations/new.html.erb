<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <br>
      <br>
        <%= image_tag "cforgood.png"%>
        <%=  %>
    </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="form-design text-center">
        <p class="inline"> Already a member ?</p>
        <%= link_to t(".sign_in", :default => " Sign in"), new_session_path(resource_name) %>
      <h2 class="text-center padding-bottom-20"></h2
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
        </div>

<!--         <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me  %>
            <%= f.label :remember_me%>
          </div>
        <% end -%> -->

        <div class="text-center padding-bottom-20">
          <%= f.submit "Sign Up", class: "btn btn-success" %>
            <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Sign up with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary"%><br />
                <% end -%>
            <% end -%>
<!--         <div class="mt-10">
            <%= render "devise/shared/links" %>
        </div> -->
        </div>
      <% end %>
      </div>
    </div>
</div>