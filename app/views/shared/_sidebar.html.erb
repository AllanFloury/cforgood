<!-- Target for toggling the sidebar `.sidebar-checkbox` is for regular
     styles, `#sidebar-checkbox` for behavior. -->
<input type="checkbox" class="sidebar-checkbox" id="sidebar-checkbox">

<!-- Toggleable sidebar -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-item">


    <% if user_signed_in? %>
        <%= image_tag (current_user.picture.exists? ? current_user.picture : "profile.png"), class: "img-circle"  %>
        <p>
          <%= current_user.first_name %>
          <%= current_user.last_name %>
          <%= current_user.name %>
        </p>
    <% end %>
  </div>

  <nav class="sidebar-nav">
    <div class="sidebar-nav-item"><i class="fa fa-home"></i><%= link_to "Accueil", root_path %></div>
    <div class="sidebar-nav-item"><i class="fa fa-tag"></i><%= link_to "Bons Plans", perks_path %></div>
    <div class="sidebar-nav-item"><i class="fa fa-street-view"></i><%= link_to "Autour De Moi", businesses_path %></div>
    <div class="sidebar-nav-item"><i class="fa fa-cart-arrow-down"></i><%= link_to "Mon Panier", perk_requests_user_path %></div>
    <div class="sidebar-nav-item"><i class="fa fa-cog"></i><%= link_to "Paramètres", new_user_session_path %></div>
    <div class="sidebar-nav-item"><i class="fa fa-user-plus"></i><%= link_to "Devenir Partenaire", partner_path %></div>
    <div class="sidebar-nav-item"><i class="fa fa-info-circle"></i><%= link_to "A Propos", new_user_session_path %></div>
    <div class="sidebar-nav-item"><i class="fa fa-sign-out"></i><%= link_to destroy_user_session_path, method: :delete do %>
      <%= t ".sign_out", default: "Se Déconnecter" %>
    <% end %></div>
  </nav>

  <div class="sidebar-item">
    <p>
      © CFORFGOOD
    </p>
  </div>
</div>
