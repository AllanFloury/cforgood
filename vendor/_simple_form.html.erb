<%= simple_form_for(@business, url: businesses_path, html: { multipart: true }) do |form| %>
  <div class="row padded text-center">
    <%= form.input :name, placeholder: 'Cgood business near you'%>
    <%= form.input :description, placeholder: 'Cfor good impact.'%>
    <!-- <form role="form" class="form-horizontal"> -->
      <fieldset>
         <div class="form-group">
          <label class="control-label">Address</label><br>
            <input id="user_input_autocomplete_address" name="address"
            class="form-control" placeholder="Start typing your address...">
        </div>
      </fieldset>
    <%= form.input :, as: :select, collection: [1, 2, 3, 4, 5] %>
    <%= form.input : %>
    <%= form.fields_for :business_images do |builder| %>
      <% if builder.object.new_record? %>
        <p>
        <%= builder.label :picture, "Picture" %>
        <%= builder.file_field :picture %>
        </p>
      <% end %>
    <% end %>
  </div>
  <div class="row text-center">
    <%= form.submit "Add", :class => "btn btn-primary" %>
  </div>
<% end %>

<p>Find me in app/views/businesses/show.html.erb</p>
<div id="wrapper">
  <div class="container-fluid">
    <div class="row text-center">
      <h1><%=#@business.name.upcase%></h1>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <% @businesses.each do |business| %>
          <%= link_to business_path(business), target: '_blank' do %>
            <div class="row relative" id="business-image">
              <%= image_tag "business1.jpg" %>
              <div class="row">
                  <p class="mt-5"><%= business.name.upcase %></p>
                <div class="row">
                  <p><%= business.description %></p>
                </div>
              </div>
              <%end%>
            <%end%>
          </div>
        </div>
    </div>
  </div>
</div>

